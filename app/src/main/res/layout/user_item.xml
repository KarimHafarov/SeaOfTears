<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation= "horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/RankTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:maxLines="2"
            android:text="Rank"
            android:textSize="30sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/surnameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surname"
            android:maxLines="2"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/RankTextView"/>
        <ImageView
            android:id="@+id/updateButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="35dp"
            android:src="@drawable/baseline_autorenew_24"/>
        <ImageView
            android:id="@+id/deleteButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="5dp"
            android:src="@drawable/baseline_auto_delete_24"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"
        android:textSize="18sp"
        android:layout_marginTop="45dp"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/fathernameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fathername"
        android:textSize="18sp"
        android:layout_marginTop="45dp"
        android:layout_marginStart="100dp"
        android:layout_below="@id/nameTextView"/>

    <TextView
        android:id="@+id/timeeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Години :"
        android:textSize="18sp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="10dp" />
    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18sp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="85dp" />

    <TextView
        android:id="@+id/dutyyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Наряди :"
        android:textSize="18sp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="140dp" />
    <TextView
        android:id="@+id/dutyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="18sp"
        android:layout_marginTop="70dp"
        android:layout_marginStart="215dp" />

</androidx.cardview.widget.CardView>